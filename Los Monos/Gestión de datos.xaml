        <Button HorizontalAlignment="Left" Margin="723.627,10,0,0" VerticalAlignment="Top" Width="58.373" Height="66.009" FontSize="18" Click="Button_Click">
            <Image HorizontalAlignment="Left" Height="52.6" VerticalAlignment="Top" Width="52.965" Source="back-4-icon.png"/>
        </Button>

    </Grid>
</Window>
